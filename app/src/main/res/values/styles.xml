<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title">
        <item name="android:textSize">@dimen/text_20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/margin_10dp</item>
    </style>

    <style name="title.black">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="title.green">
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/codely_green</item>
    </style>

    <style name="title.blue">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/codely_blue</item>
    </style>

    <style name="author">
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/margin_10dp</item>
    </style>

    <style name="about_title">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textColor">@color/codely_blue</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/margin_10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
    </style>

    <style name="about_content">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textColor">@color/codely_blue</item>
        <item name="android:padding">@dimen/margin_10dp</item>
    </style>

    <style name="content">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
